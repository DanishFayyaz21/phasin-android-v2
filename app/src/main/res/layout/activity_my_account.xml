<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".ui.home.MyAccountActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/back_button"
            android:padding="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/solway_bold_700"
            android:text="@string/my_account"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/profile_img"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF0000" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/solway_bold_700" />

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/solway_medium_500" />

                <TextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="San Jose, South Dakota 83475"
                    android:layout_marginVertical="4dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/solway_medium_500"
                    app:drawableStartCompat="@drawable/ic_location"
                    android:drawablePadding="6dp"
                    app:drawableTint="@color/text_secondary" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">

                    <!-- Heading for Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details"
                        android:textColor="@color/text_secondary_80"
                        android:textSize="22sp"
                        android:fontFamily="@font/solway_bold_700"/>


                    <TextView
                        android:id="@+id/tv_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/edit_profile"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableEndCompat="@drawable/ic_right_arrow"
                        app:drawableStartCompat="@drawable/ic_edit"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_premium"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/premium"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableEndCompat="@drawable/ic_right_arrow"
                        app:drawableStartCompat="@drawable/ic_premium"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_list"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/list"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableEndCompat="@drawable/ic_right_arrow"
                        app:drawableStartCompat="@drawable/ic_list"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_terms_condition"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/terms_conditions"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableEndCompat="@drawable/ic_right_arrow"
                        app:drawableStartCompat="@drawable/ic_terms_condition"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_notification"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/notifications"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableEndCompat="@drawable/ic_right_arrow"
                        app:drawableStartCompat="@drawable/ic_notification"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableEndCompat="@drawable/ic_right_arrow"
                        app:drawableStartCompat="@drawable/ic_privacy"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_resume_account"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/resume_account"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableStartCompat="@drawable/ic_resume"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_signout"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="@string/signout"
                        android:textColor="@color/text_secondary_70"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/solway_medium_500"
                        app:drawableStartCompat="@drawable/ic_signout"
                        android:drawablePadding="8dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logo2"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="44dp">


                    <TextView
                        android:id="@+id/tv_map"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_home_menu"
                        android:text="@string/map"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:fontFamily="@font/solway_regular_400"
                        android:paddingHorizontal="32dp"
                        android:layout_marginHorizontal="6dp"
                        android:paddingVertical="6dp"
                        app:drawableTopCompat="@drawable/ic_map__3_" />


                    <TextView
                        android:id="@+id/tv_recent_activities"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_home_menu"
                        android:text="@string/recent_activities"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/solway_regular_400"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginHorizontal="6dp"
                        android:paddingVertical="6dp"
                        app:drawableTopCompat="@drawable/ic_recent_activity" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>